{
  "name": "@deanacus/commitlint-config",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A CommitLint configuration",
  "repository": {
    "type": "git",
    "url": "git@github.com:deanacus/config.git"
  },
  "homepage": "https://github.com/deanacus/config/tree/main/packages/commitlint",
  "bugs": {
    "url": "https://github.com/deanacus/config/issues"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --noEmit && node ./scripts/build",
    "coverage": "jest --coverage",
    "format": "prettier --write --ignore-path ../../.prettierignore --ignore-unknown ./",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "style": "prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./",
    "test": "jest",
    "type": "tsc --noEmit",
    "validate": "tsc --noEmit && eslint './src/**' && prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./"
  },
  "dependencies": {
    "@commitlint/lint": "^15.0.0",
    "@commitlint/utils": "^8.3.6"
  },
  "devDependencies": {
    "@commitlint/types": "^13.1.0",
    "@deanacus/eslint-config": "^0.2.2",
    "@deanacus/prettier-config": "^0.1.1",
    "@deanacus/tsconfig": "^0.1.0",
    "esbuild": "^0.12.25",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.4.0",
    "jest": "^27.1.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
