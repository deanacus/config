{
  "name": "@deanacus/eslint-config",
  "version": "0.0.0",
  "license": "MIT",
  "description": "An Eslint configuration",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-plugin-import",
    "eslint-plugin-jest",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-typescript",
    "jest",
    "react",
    "react-hooks",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:deanacus/config.git"
  },
  "homepage": "https://github.com/deanacus/config/tree/main/packages/eslint",
  "bugs": {
    "url": "https://github.com/deanacus/config/issues"
  },
  "main": "dist/index.js",
  "files": [
    "./dist/index.js",
    "dist/index.d.ts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --noEmit && node ./scripts/build",
    "coverage": "jest --coverage",
    "fix": "eslint './src/**' --fix && prettier --write --ignore-unknown ./",
    "format": "prettier --write --ignore-path ../../.prettierignore --ignore-unknown ./",
    "lint": "eslint 'src/**'",
    "style": "prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./",
    "type": "tsc --noEmit",
    "validate": "tsc --noEmit && eslint './src/**' && prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "esbuild": "^0.12.25",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint": "^7.32.0",
    "read-pkg-up": "^8.0.0"
  },
  "devDependencies": {
    "@deanacus/tsconfig": "^0.1.0",
    "@types/eslint": "^7.28.0",
    "@types/node": "^16.7.10",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
