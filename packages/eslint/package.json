{
  "name": "@deanacus/eslint-config",
  "version": "0.2.2",
  "license": "MIT",
  "description": "An Eslint configuration",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-plugin-import",
    "eslint-plugin-jest",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-typescript",
    "jest",
    "react",
    "react-hooks",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:deanacus/config.git"
  },
  "homepage": "https://github.com/deanacus/config/tree/main/packages/eslint",
  "bugs": {
    "url": "https://github.com/deanacus/config/issues"
  },
  "main": "dist/index.js",
  "files": [
    "./dist/index.js",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --noEmit && node ./scripts/build",
    "coverage": "jest --coverage",
    "fix": "eslint './src/**' --fix && prettier --write --ignore-unknown ./",
    "format": "prettier --write --ignore-path ../../.prettierignore --ignore-unknown ./",
    "lint": "eslint",
    "style": "prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./",
    "type": "tsc --noEmit",
    "validate": "tsc --noEmit && eslint './src/**' && prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "esbuild": "^0.14.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "read-pkg-up": "^8.0.0"
  },
  "devDependencies": {
    "@deanacus/prettier-config": "^0.1.1",
    "@deanacus/tsconfig": "^0.1.0",
    "@types/eslint": "^8.2.1",
    "@types/node": "^16.7.10",
    "eslint": "^8.4.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "eslint": "^8.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@deanacus/prettier-config"
}
