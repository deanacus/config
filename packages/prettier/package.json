{
  "name": "@deanacus/prettier-config",
  "version": "0.1.1",
  "license": "MIT",
  "description": "A Prettier configuration",
  "repository": {
    "type": "git",
    "url": "git@github.com:deanacus/config.git"
  },
  "homepage": "https://github.com/deanacus/config/tree/main/packages/prettier",
  "bugs": {
    "url": "https://github.com/deanacus/config/issues"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --noEmit && node ./scripts/build",
    "coverage": "jest --coverage",
    "format": "prettier --write --ignore-path ../../.prettierignore --ignore-unknown ./",
    "lint": "eslint",
    "style": "prettier --check --ignore-path ../../.prettierignore --ignore-unknown ./",
    "test": "jest",
    "type": "tsc --noEmit"
  },
  "devDependencies": {
    "@deanacus/eslint-config": "^0.2.1",
    "@deanacus/tsconfig": "^0.1.0",
    "@types/jest": "^27.0.1",
    "esbuild": "^0.12.25",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "jsonschema": "^1.4.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "prettier": "^2.5.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
